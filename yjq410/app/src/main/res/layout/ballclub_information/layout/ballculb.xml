<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:baselineAligned="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="信息确认"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_test1"
        android:layout_width="match_parent"
        android:layout_height="439dp"
        android:layout_weight="0.57">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_game_named"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:paddingTop="5dp"
                        android:text="预约场馆："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_named"
                        android:layout_marginTop="8dp"
                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_named"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_objectd"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"

                        android:paddingTop="5dp"
                        android:text="预约类型："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_objectd"
                        android:layout_marginTop="8dp"
                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_object"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_objectd"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_dated"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"

                        android:paddingTop="5dp"
                        android:text="约定日期："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_dated"
                        android:layout_marginTop="8dp"
                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_date"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_dated"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_game_placed"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="4dp"

                        android:paddingTop="5dp"
                        android:text="约定场地："
                        android:textColor="@color/colorCommit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_game_placed"
                        android:layout_marginTop="8dp"

                        android:background="@color/c3" />

                    <TextView
                        android:id="@+id/tv_game_place"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/tv_game_placed"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/ll_center"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="100dp"
                    >
                    <RadioGroup
                        android:id="@+id/payWay_choose"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        >
                        <LinearLayout
                            android:id="@+id/r_wc"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/iv_wx"
                                    android:layout_width="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/wx" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="20dp"
                                    android:gravity="center"
                                    android:layout_toRightOf="@+id/iv_wx"
                                    android:textSize="16sp"
                                    android:text="微信支付"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent">
                                <RadioButton
                                    android:id="@+id/rb_weChat"
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="match_parent"
                                    android:checked="true"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/r_aipy"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="50dp">
                                <ImageView
                                    android:id="@+id/iv_zfb"
                                    android:layout_width="40dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/zfb" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:paddingLeft="20dp"
                                    android:layout_toRightOf="@+id/iv_zfb"
                                    android:textSize="16sp"
                                    android:text="支付宝支付"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="50dp">
                                <RadioButton
                                    android:id="@+id/rb_zfb"
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </RadioGroup>
                </TableRow>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/order_sure"
            android:text="确认支付 Ұ 32"/>
    </LinearLayout>

</LinearLayout>
